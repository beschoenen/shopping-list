<div class="container container-small new-item-container">
    <input class="form-control" id="new-item" placeholder="{{item}}..." autofocus autocomplete="off"/>
</div>
<div class="container container-small item-container">
    <ul class="list-group">
        {{#each entries}}
            <li class="list-group-item {{#if this.checked}}checked{{/if}}" data-id="{{this.id}}">
                <input type="checkbox" {{#if this.checked}}checked{{/if}} id="checkbox-{{this.id}}"/>
                <label for="checkbox-{{this.id}}">{{this.text}}</label>
                <i class="fas fa-pencil-alt pull-right item-edit"></i>
            </li>
        {{/each}}
    </ul>
</div>
